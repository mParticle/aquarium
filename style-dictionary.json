{
  "source": ["design/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "files": [
        {
          "destination": "src/styles/_variables.css",
          "format": "css/variables",
          "options": {
            "showFileHeader": false
          }
        }
      ]
    },
    "typescript": {
      "transformGroup": "js",
      "files": [
        {
          "destination": "src/styles/style.ts",
          "format": "javascript/es6"
        }
      ]
    }
  }
}